@using Microsoft.AspNetCore.Identity
@using TCGshopTestEnvironment.Models

@inject SignInManager<UserAccount> SignInManager
@inject UserManager<UserAccount> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <p>

                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="btn btn-primary btnSignIn" width="auto">Hello @UserManager.GetUserName(User)!</a>

                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
        </p>

    </form>
}
else
{
    <h1 class="TopLogin"><a href="#" onclick="location.href = '@Url.Action("Login", "Account")'">Sign In </a>  <a style="padding-left:50px;padding-right:35px;" href="#" onclick="location.href = '@Url.Action("Register", "Account")'">Register </a> <a asp-area="" asp-controller="Shopping" asp-action="ShoppingCart"><span class="glyphicon glyphicon-shopping-cart" style="color: #e4e4e4;"></span> <span class="badge" id="shopcartamountbadge"></span></a></h1>
}