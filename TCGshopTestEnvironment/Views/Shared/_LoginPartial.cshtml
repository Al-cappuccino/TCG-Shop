@using Microsoft.AspNetCore.Identity
@using TCGshopTestEnvironment.Models

@inject SignInManager<UserAccount> SignInManager
@inject UserManager<UserAccount> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <p>

                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="btn btn-primary btnSignIn" width="auto">Hello @UserManager.GetUserName(User)!</a>

                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
        </p>

    </form>
}
else
{

    <p>
        <button type="button" onclick="location.href = '@Url.Action("Login", "Account")'" class="btn btn-primary btnSignIn">Sign in</button>

        <button type="button" onclick="location.href = '@Url.Action("Register", "Account" )'" class="btn btn-primary btnSignIn" style="margin-left:5px;">Register</button>

    </p>
    @*<ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>*@
}