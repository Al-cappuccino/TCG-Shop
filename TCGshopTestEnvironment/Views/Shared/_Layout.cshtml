                    <div class="row">
                        <div class="col-md-6">
                            <div class="regPrice">
                                <small>Last Price</small>
                                <p class="innerPrice">€ 24,95</p>
                            </div>
                        </div>
                        <div class="col-md-6 outerCallToAction">
                            <button class="btn-default callToAction">Buy Now!</button>
                        </div>
