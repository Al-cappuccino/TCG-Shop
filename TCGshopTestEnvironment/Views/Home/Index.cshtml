@using Microsoft.AspNetCore.Http
@model IEnumerable<TCGshopTestEnvironment.ViewModels.PopularViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="paddingt50 paddingb50" style="background: url('/images/magic.jpg') no-repeat;background-size: cover;">
    <div class="container slideshow margint100">
        <div class="row pt-5 mt-5">
            <div class="col-md-6" style="background-color:rgba(0, 0, 0, 0.7);">
                <small>MAGIC: THE GATHERING</small>
                <h1>Magic Abomination</h1>
                <p class="lead">Defend Your Guild.</p>
                <a href="/Products?CardType=Magic"><button class="btn btn-default btnSignIn" style="margin-bottom: 10px;">Order now!</button></a>
            </div>
            <div class="col-md-6">

            </div>
        </div>
    </div>
</div>

<div style="height: 280px">
    <div class="containerCenter" style="margin-top: 2px;">
        <h3 style="color: rgb(230, 230, 230);">Popular Choices</h3>
    </div>
    <div class="containerCenter">
        @foreach (var product in @Model)
    {
        <div class="col-xl-3 col-md-3 col-xs-6 text-center" style="margin-top:5px; height: 270px; width: 180px;">
            <div class="innerColomnSquare" style="width: -webkit-fill-available; height: -webkit-fill-available;">
                <div>
                    <h1 class="ProductTitleHome" title="@product.Name">@product.Name</h1>
                </div>
                <a asp-controller="Products" asp-action="Detail" asp-route-id="@product.ProductId">
                    <img src="@(Startup.storagePath + product.ImageUrl)" class="imageCell imagehover" style="height: 185px; width: 120px;" />
                </a>
                <br>
                <h4 style="color: rgb(230, 230, 230);">€@product.Price</h4>
            </div>
        </div>
    }
    </div>
</div>