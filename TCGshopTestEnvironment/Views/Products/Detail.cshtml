@model TCGshopTestEnvironment.ViewModels.ProductsDetailModel
@{ViewBag.Title = "Detail View";
}

<div id ="asssets">
    <h3>Product</h3>
    <div id="productsTable">
        <table class="table table-condensed" id="productsIndexTable">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Grade</th>
                    <th>Stock</th>
                    <th>Price</th>

                </tr>
            </thead>
            <tbody>

                <tr class="assetRow">
                    <td class=""><img src="/images/Cards/@(Model.ImageUrl+".png")" class="imageCell" /></td>
                    <td class="">@Model.Name</td>
                    <td class="">@Model.Description</td>
                    <td class="">@Model.Grade</td>
                    <td class="">@Model.Stock</td>
                    <td class="">€@Model.Price</td>

                </tr>
            
            </tbody>
        </table>
    </div>
</div>
