@model TCGshopTestEnvironment.ViewModels.ProductsDetailModel
@inject SignInManager<UserAccount> SignInManager
@inject UserManager<UserAccount> UserManager
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<style>
    .form-control { margin-bottom:10px;margin-top: 5px;}
</style>

<div id="asssets">
    <div id="productsTable">
        <div class="container">
            <form method="post">
                <div class="row detailProduct" style="background-color: #393a3e;padding:20px;">
                    <div class="col-md-6 text-center">
                        <tr class="assetRow">
                        <td class=""><img src="@(Startup.storagePath + Model.ImageUrl)" class="" style="height: 300px; width: 240px;" /></td>
                    </div>

                    <div class="col-md-6">
                        <strong style="color: #e4e4e4;">Name</strong> <br />
                        <input asp-for="Name" class="form-control" style="color: black;" pattern=".{1,}"   required title="Name has to be atleast 1 character"/>
                        <strong style="color: #e4e4e4;">Grade</strong> <br />
                        <label class="GradeText" style="font-size: 1.5rem;">
                            <input asp-for="Grade" class="form-control" type="number" style="color: black;" min="1"
                                   step="1" max="10"
                                   onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                                   title="Numbers only">
                        </label>
                        <p style="margin-top: 5px;">
                            <strong style="color: #e4e4e4;">Description</strong> <br />
                            <span> <input asp-for="Description" class="form-control" style="color: black;" /></span>
                        </p>
                        <p>
                            <strong style="color: #e4e4e4;">Stock</strong> <br />
                            <label value="@Model.Stock" id="productStock">
                                <input asp-for="Stock" class="form-control" type="number" min="1" style="color: black"
                                       step="1"
                                       onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                                       title="Numbers only">
                            </label>
                        </p>

                        <p>
                            <strong style="color: #e4e4e4;">Price</strong> <br />
                            <label style="color: #e4e4e4;"><input asp-for="Price" class="form-control" style="color: black;" id="priceinput" min="0.01" type="price" step=".01"/></label>
                        </p>
                        <input type="hidden" asp-for="Id" value="@Model.Id" />
                        <input type="hidden" asp-for="returnUrl" value="@ViewBag.returnUrl" />
                        <button type="submit" class="btn btn-default btnSearch">Save</button>
                    </div>
                </div>
            </form>
            <a asp-action="DeleteProduct" asp-route-productid="@Model.Id" asp-route-returnUrl="@ViewBag.returnUrl"><button class="btn btn-primary btnSignIn AddCart" >Delete</button></a>
        </div>
    </div>
</div>