@using X.PagedList.Mvc.Core




<div class="container">
    <div class="row">
        <div class="col-md-4">
        </div>
    </div>
</div>

<div id="asssets">
    <div id="productsTable">
        <div class="container-fluid">
            <div class="row" style="margin-top: 10px;">


                <!--filtering-->
                @await Html.PartialAsync("/Views/Products/_Filters.cshtml")


