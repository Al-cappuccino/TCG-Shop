                        <input type="button" value="8" onclick="location.href='@Url.Action("Search", new { ViewBag.page, ViewBag.name, ViewBag.sortBy, ViewBag.catagorie, ViewBag.grades, ViewBag.PriceLow, ViewBag.PriceHigh})&pageAmount=8'" />
