@model TCGshopTestEnvironment.ViewModels.ProductsNewProductViewModel

@{
    ViewData["Title"] = "Add New Product";
}


<link rel="stylesheet" href="/css/MaterializeChip.css">


<div class="containerCenter">
    <div class="row justify-content-center">

        @*<div class="col-md-12">*@
        @*<h2>@ViewData["Title"]</h2>*@

        <div class="col-xl-3 col-md-3 col-xs-6  text-center" style="margin-top:10px; height: auto; width: 500px; margin-bottom:10px;">
            <div class="innerColomn" style="width: -webkit-fill-available; height: -webkit-fill-available;">
                <div class="form-group">
                    <form method="post" asp-action="NewProduct" asp-controller="Products" id="NewProduct">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label asp-for="Name"></label> <input asp-for="Name" size="10" class="form-control"/> <span asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageUrl"></label>
                            <input asp-for="ImageUrl" type="file" size="10" class="form-control" />
                            <span asp-validation-for="ImageUrl"></span>
                            
                            
                        </div>


                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" size="10" class="form-control" />
                            <span asp-validation-for="Price"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Grade"></label>
                            <input asp-for="Grade" size="10" class="form-control" type="text" />
                            <span asp-validation-for="Grade"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Category"></label>
                            <div class="chips chips-autocomplete catagory-chips" id="NewProductChip"></div>
                            <div id="HiddenCategroyInput">


                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Stock"></label>
                            <input asp-for="Stock" size="10" class="form-control" />
                            <span asp-validation-for="Stock"></span>
                        </div>

                        <button class="btn btn-primary btnNewProduct btnLogin" type="submit" value="Add Product" name="action">
                            Add New Product
                        </button>


                        <!--<p><input type="submit" value="Add Product" class="btn btn-default btnLogin" /></p>-->
                        </form>
                    </div>
                </div>
            </div>

        <div class="col-xl-3 col-md-3 col-xs-6  text-center" style="margin-top:10px; height: auto; width: 270px;">
            <div class="innerColomn" style="width: -webkit-fill-available; height: -webkit-fill-available;">

                <h1 class="ProductTitleCat" id="NewProductName">Name</h1>
                <label class="GradeText" id="NewProductGrade">Grade</label><br/>
                <div class="Category" id="NewProductCategory">
                </div>
                <img src="@(Startup.storagePath + "100.png")" class="imageCell"/>
                <br>
                <h4 id="NewProductPrice">€100</h4>

            </div>
        </div>


    </div>
</div>

<!--Delay Load Javascript for Chips-->
<script type='text/javascript' src='/js/NewProduct.js' defer='defer'></script>