@{ViewBag.Title = "Pokemon";
}

@using X.PagedList.Mvc;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@{

    List<string> catagorielist = ViewBag.catagorie as List<string>;
    List<string> gradeslist = ViewBag.grades as List<string>;
    List<string> totalcatagorielist = ViewBag.totalCatagory as List<string>;
}

<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">


<div class="container">
    <div class="row">
        <div class="col-md-4">

        </div>
    </div>
</div>



<div id="asssets">S
    <div id="productsTable">
        <div class="container-fluid">
            <div class="row" style="margin-top: 10px;">
                @await Html.PartialAsync("/Views/Products/_Filters.cshtml")
                <div class="col-md-9">
                    <div class="col-md-12">
                        
                        @using (Html.BeginForm(FormMethod.Get, new { id = "TheForm" }))
                        {
                        <div class="col-md-9 float-right text-right">
                            <span>Sort By: </span>
                        </div>
                        <div class="col-md-3">
                            <input type="hidden" name="name" value="@ViewBag.name" />
                            <input type="hidden" name="pageAmount" value="@ViewBag.PageAmount" />
                            <input type="hidden" name="cardType" value="@ViewBag.cardType"/>
                        </div>
                        }
                        @Html.DropDownList("Sortby", new SelectList(ViewBag.Sorting, "Value", "Text", ViewBag.SelectSort), new { onChange = "document.getElementById('TheForm').submit();", @style = "display: block" })
                         

                    </div>
                    @await Html.PartialAsync("/Views/Products/_ProductViews.cshtml")

                    <div class="col-md-12">
                        
                        @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Index", new { page, ViewBag.PageAmount, ViewBag.CardType, ViewBag.name, ViewBag.sortBy, ViewBag.catagorie, ViewBag.grades, ViewBag.PriceLow, ViewBag.PriceHigh }))

                        <input type="button" value="8" onclick="location.href='@Url.Action("Index", new { ViewBag.page, ViewBag.CardType, ViewBag.name, ViewBag.sortBy, ViewBag.catagorie, ViewBag.grades, ViewBag.PriceLow, ViewBag.PriceHigh})&pageAmount=8'" />
                        <input type="button" value="16" onclick="location.href='@Url.Action("Index", new { ViewBag.page, ViewBag.CardType, ViewBag.name, ViewBag.sortBy, ViewBag.catagorie, ViewBag.grades, ViewBag.PriceLow, ViewBag.PriceHigh})&pageAmount=16'" />
                        <input type="button" value="32" onclick="location.href='@Url.Action("Index", new { ViewBag.page, ViewBag.CardType, ViewBag.name, ViewBag.sortBy, ViewBag.catagorie, ViewBag.grades, ViewBag.PriceLow, ViewBag.PriceHigh})&pageAmount=32'" />
                        <input type="button" value="64" onclick="location.href='@Url.Action("Index", new { ViewBag.page, ViewBag.CardType, ViewBag.name, ViewBag.sortBy, ViewBag.catagorie, ViewBag.grades, ViewBag.PriceLow, ViewBag.PriceHigh})&pageAmount=64'" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>